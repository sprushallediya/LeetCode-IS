class Solution {
    public double calculateTax(int[][] brackets, int income) {
        double tax = 0.0;
        int prevUpper = 0; // Tracks the upper bound of the previous bracket

        for (int[] bracket : brackets) {
            int upper = bracket[0]; // Current bracket's upper bound
            int percent = bracket[1]; // Current bracket's tax rate

            // Calculate the taxable income for this bracket
            int taxableIncome = Math.min(income, upper) - prevUpper;
            if (taxableIncome > 0) {
                tax += taxableIncome * (percent / 100.0);
            }

            // Update the previous upper bound
            prevUpper = upper;

            // If the income has already been fully taxed, break the loop
            if (income <= upper) {
                break;
            }
        }

        return tax; //rushalle
    }
}
